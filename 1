 #include <iostream>

int main()
{

    int n = 15;
    int** M;
    M = new int* [n];
    for (int i = 0; i < n; ++i) {
        M[i] = new int[i + 1];
    }

    for (int i = 0; i < n; ++i) {
        for (int j = 0; j <= i; ++j) {
            if (j == i || j == 0) {
                M[i][j] = 1;
            }
            else {
                M[i][j] = M[i - 1][j] + M[i - 1][j - 1];
            }
        }
    }
    int p = M[n - 1][n / 2];
    int y = 0;
    while (p) {
        p /= 10;
        ++y;
    }
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j <= i; ++j) {
            p = M[i][j];
            int u = 0;
            while (p) {
                p /= 10;
                ++u;
            }
            while(u<=y){
                std::cout << " ";
                ++u;
            }
            std::cout << M[i][j];
        }
        std::cout << std::endl;
    }
    for (int i = 0; i < n; ++i) {
        delete[] M[i];
    }
    delete[] M;
}
